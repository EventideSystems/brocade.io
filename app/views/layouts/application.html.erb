<!DOCTYPE html>
<html>
  <head>
    <title>Brocade</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= render 'layouts/favicon' -%>
    <%= stylesheet_pack_tag("application") %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" data-mutate-approach="sync"></script>
    <%= render 'layouts/analytics' if Rails.env.production? %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/navbar' %>
      <%#= render 'layouts/wip_warning' -%>
      <%# NOTE: required by Devise - needs rework %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
